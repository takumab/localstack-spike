{
	"name": "localstack-spike",
	"version": "0.1.0",
	"bin": {
		"localstack-spike": "bin/localstack-spike.js"
	},
	"scripts": {
		"build": "tsc",
		"watch": "tsc -w",
		"test": "vitest",
		"cdk": "cdk",
		"local:deploy": "cdklocal deploy",
		"local:bootstrap": "cdklocal bootstrap",
		"localstack:start": "LOCALSTACK_SERVICES=dynamodb,lambda,apigateway,sqs,s3,iam,cloudformation,logs,ssm localstack start",
		"local:query": "awslocal dynamodb query --table-name  payment-projections --key-condition-expression 'id = :id' --expression-attribute-values '{ \":id\": {\"S\": \"1\"} }'",
		"local:scan": "awslocal dynamodb scan --table-name  payment-projections"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@types/aws-lambda": "^8.10.159",
		"@types/node": "^24.10.1",
		"aws-cdk": "2.1033.0",
		"ts-node": "^10.9.2",
		"typescript": "~5.9.3",
		"vitest": "^4.0.15"
	},
	"dependencies": {
		"@aws-cdk/toolkit-lib": "^1.11.0",
		"@aws-sdk/client-dynamodb": "^3.940.0",
		"@aws-sdk/lib-dynamodb": "^3.940.0",
		"aws-cdk-lib": "2.215.0",
		"aws-lambda": "^1.0.7",
		"constructs": "^10.0.0"
	}
}
